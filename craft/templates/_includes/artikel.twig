{% for block in entry.artikel %}
	{% switch block.type %}
	{# Begin Tabel #}
	{% case 'blokTabel' %}
	<table class="hover stack article-info-table">
        <tbody>
        	{% for row in block.artikelTabel %}
          <tr>
            <td width="20%"><strong>{{ row.omschrijving }}</strong></td>
            <td>{{ row.inhoud }}</td>
          </tr>
          {% endfor %}
        </tbody>
    </table>
    {# Einde Tabel #}
    {# Begin Paragraaf #}
	{% case 'blokParagraaf' %}
	<div class="article-body-text">
	{{ block.artikelParagraaf }}
	</div>
	{# Einde Paragraaf #}
	{# Begin Lijsten #}
	{% case 'blokLijst' %}
	<div class="article-list">
		<ul>
			{% for item in block.artikelLijst %}
			<li>{{ item.inhoud }}</li>
			{% endfor %}
		</ul>
	</div>
	{# Einde lijsten#}
	{# Begin Callout #}
	{% case 'blokCallout' %}
	<div class="callout large article-callout">
	  <h5>{{ block.artikelCalloutTitel }}</h5>
	  {{ block.calloutBodyTekst }}
	</div>
	{# Einde Callout #}
	{# Begin Quote #}
	{% case 'blokQuote' %}
	<blockquote class="article-quote">
	  {{ block.artikelQuote }}
	  <cite>{{ block.auteur }}</cite>
	</blockquote>
	{# Einde Quote #}
	{# Begin Afbeelding #}
	{% case 'blokAfbeelding' %}
		{% if block.artikelAfbeelding %}
	    {% set asset = block.artikelAfbeelding.first() %}
	    	<img class="article-image" src="{{ asset.url }}" alt="{{ asset.title }}">
		{% endif %}
	{# Einde Afbeelding #}

